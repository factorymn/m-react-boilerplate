@import "../../commonStyles/commonHelperStyles/fonts.styl"
@import "../../commonStyles/commonHelperStyles/reset.styl"

body {
  background-image: linear-gradient(90deg,#6B6BAA 0,#292941)
  margin: 0
  padding: 0
  position: relative
  font-family: Arial, Helvetica, sans-serif
  font-size: 16px
  align-items: center;
  justify-content: center;
  min-height: 100vh
  padding-top: 60px
  box-sizing: border-box
}

.main {
  box-shadow: 0 1px 8px 0 rgba(0,0,0,.2)
  box-sizing: border-box
  width: 1100px
  background-color: white
  position: relative
  margin: 0 auto
}
